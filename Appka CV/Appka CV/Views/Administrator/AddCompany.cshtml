@model Company
@{
    Layout = "_AdminLayout";
}

<p style="margin-top: 100px; margin-left: 120px; font-family: Roboto; font-size: 64px; color:white;">Dodaj/Zmień firmę</p>
<div style="display: flex; margin-left: 150px;">
    <span style="font-family: Roboto; color: white; font-size: 20px;">Nazwa firmy:</span>
    <form asp-action="AddCompany" method="post">
        <input type="text" style="margin-left: 50px; width: 200px;" asp-for="Name" value="@Model.Name" />
        <input type="hidden" asp-for="Id" value="@Model.Id" />
        @if (Model.Id == 0)
        {
            <button type="submit" style="margin-left: 200px; background: #3BB55D; box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25); border: none; font-family: Roboto; width: 170px; color: white; font-weight: bold;">Dodaj firmę</button>
        }
        else
        {
            <button type="submit" style="margin-left: 200px; background: #3BB55D; box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25); border: none; font-family: Roboto; width: 170px; color: white; font-weight: bold;">Zmień nazwę</button>
        }


    </form>
    
</div>